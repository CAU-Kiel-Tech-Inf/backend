<% semantic_form_for [@contest] do |f| %>
  <% f.inputs do %>
    <%= f.input :name, :required => true %>
    <%= f.input :game_definition,
      :selected => GameDefinition.all.first.game_identifier,
      :value_method => :game_identifier,
      :label_method => :game_identifier,
      :collection => GameDefinition.all,
      :input_html => { :disabled => !@contest.new_record? },
      :include_blank => true,
      :required => true
    %>
    <%= f.input :subdomain,
      :input_html => { :disabled => !@contest.new_record? }
    %>
    <%= f.input :public %>
  <% end %>
  <%= f.buttons %>
<% end %>
