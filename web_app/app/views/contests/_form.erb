<% semantic_form_for @contest do |f| %>
  <% f.inputs do %>
    <%= f.input :name, :required => true %>
    <%= f.input :game_definition,
      :collection => GameDefinition.all.collect{ |gd| [gd.game_identifier, gd.game_identifier] },
      :input_html => { :disabled => !@contest.new_record? },
      :include_blank => false,
      :required => true
    %>
    <%= f.input :active %>
  <% end %>
  <%= f.buttons %>
<% end %>