<tr>
  <td><%=h person.first_name %></td>
  <td><%=h person.last_name %></td>
  <td><%=h person.email %></td>
  <td>
    <%=t person.blocked?.to_s %>
  </td>

  <td>
    <% unless person.teams.empty? %>
      <%= select_tag "team", options_for_select(person.teams.collect(&:name)) %>
    <% end %>
  </td>

  <% show_to :administrator do %>
    <td>
      <%=t person.has_role?(:administrator).to_s %>
    </td>
  <% end %>
  <% show_image = image_tag "actions/show.png", :title => "Zeige" %>
  <% edit_image = image_tag "actions/edit.png", :title => "Bearbeiten" %>
  <td><%= link_to show_image, person %></td>
  <td><%= link_to edit_image, edit_person_path(person) %></td>
</tr>
