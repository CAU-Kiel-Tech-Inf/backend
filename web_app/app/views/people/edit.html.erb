<h1>Bearbeite Person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <br>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  <br>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <br>
  <p>
    <%= f.label :nick_name %>
    <%= f.text_field :nick_name %>
  </p>
  <br>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <br>
  <p>
    <%= f.label :password %>
    <%= f.text_field :password_hash %>
  </p>
  <br>
  <p>
    <%= f.label :administrator %>
    <%= f.check_box :administrator %>
  </p>
  <br>
  <p>
    <%= f.submit 'Aktualisieren' %>
  </p>
<% end %>

