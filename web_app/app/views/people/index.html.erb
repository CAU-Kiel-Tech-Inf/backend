<% if !current_user.teacher? || current_user.administrator? %>
  <h1>Benutzerverwaltung</h1>
<% else %>
  <h1>Schülerverwaltung</h1>
<% end %>

<table>
  <tr>
    <th>Vorname</th>
    <th>Nachname</th>
    <th>E-Mail Addresse</th>
    <th>Gesperrt</th>
    <th>Rolle</th>
    <% if !current_user.teacher? || current_user.administrator? %>
      <th>Administrator</th>
    <% end %>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%=h person.first_name %></td>
      <td><%=h person.last_name %></td>
      <td><%=h person.email %></td>
      <td>
        <% if person.blocked? %>
          <%=  'Ja' %>
        <%  else %>
          <%=  'Nein' %>
        <%  end %>
      </td>
      <% if !current_user.teacher? || current_user.administrator? %>
        <td>
          <%=  person.getRole %>
        </td>

        <td>
          <% if person.administrator? %>
            <%=  'Ja' %>
          <%  else %>
            <%=  'Nein' %>
          <%  end %>
        </td>
      <% end %>
      <td><%= link_to 'Zeige', person %></td>
      <td><%= link_to 'Bearbeiten', edit_person_path(person) %></td>
      <td><%= link_to 'Löschen', person, :confirm => 'Wirklich?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<% if !current_user.teacher? || current_user.administrator? %>
  <%= link_to 'Neue Person anlegen', new_person_path() %>
<% else %>
  <%= link_to 'Neuen Schüler anlegen', new_person_path() %>
<% end %>