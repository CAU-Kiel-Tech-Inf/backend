<% if @contestant -%>
  <h1>
    <%= link_to @contest.name, contest_contestants_url(@contest) %> /
    <%= link_to @contestant.name, contest_contestant_url(@contest, @contestant) %> /
    <%= t("views.new_person") + " " + t("actions.create") %>
  </h1>

  <% tabnav :new_person do %>
    <%= render :partial => "form" %>
  <% end %>
<% else %>
  <h1><%= t("views.new_person") + " " + t("actions.create") %></h1>

  <%= render :partial => "form" %>
<% end %>
