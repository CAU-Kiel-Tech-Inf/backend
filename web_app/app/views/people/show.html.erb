<div align="center">
  <table>
    <tr>
      <td>
        <p>
          <b>Name:</b>
          <%=h @person.first_name + " " + @person.last_name %>
        </p>

        <p>
          <b>Nickname:</b>
          <%=h @person.nick_name %>
        </p>

        <p>
          <b>E-Mail Adresse:</b>
          <%=h @person.email %>
        </p>

        <br>

        <p>
          <b>Rolle:</b>
          <%=h @person.getrole %>
        </p>

        <p>
          <b>Teams:</b>
          <%  if (@person.getteams.length > 0) %>
            <%= select_tag "team", options_for_select(@person.getteams) %>
          <% end %>
        </p>

        <br>

        <p>
          <b>Mitglied seit:</b>
          <%= l(@person.created_at, :format => :short) %>
        </p>

        <p>
          <b>Letztes Update:</b>
          <%= l(@person.created_at, :format => :short) %>
        </p>
      </td>

      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>
        <p>
          <b>Avatar (via <%= link_to "Gravatar", "http://www.gravatar.com" %>)</b><br/>
          <%= gravatar_for @person, :size => 128 %>
        </p>
      </td>
    </tr>
  </table>
</div>

<% if (current_user == @person) || (current_user.administrator?) %>
  <div align="center">
    <br>
    <%= link_to 'Bearbeiten', edit_person_path(@person) %>
  </div>
<% end %>
