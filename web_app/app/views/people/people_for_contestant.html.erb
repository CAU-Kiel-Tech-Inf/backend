<div id="actions">
  <% link_to(new_person_url(:contestant_id => @contestant.to_param, :from => @from)) do %>
    <%= image_tag('actions/add.png') %>Person hinzufügen
  <% end %>
</div>

<h1>
  <%= link_to @contest.name, contest_contestants_url %> /
  <%= @contestant.name %>
</h1>

<% tabnav :contestant do %>

  <% if not logged_in? then colspan = 5 elsif @contestant then colspan = 7 else colspan = 9 end %>
  <table class="data-table">
  <% unless @contestant.people.teachers.empty? -%>
    <thead>
    <tr><td colspan="<%=colspan%>"><h2>LehrerInnen</h2></td></tr>
    <%= render :partial => "person_table_head" %>
    </thead>
    <tbody>
    <%= render :partial => "person", :collection => @contestant.people.teachers %>
    </tbody>
  <% end %>
  <% unless @contestant.people.tutors.empty? -%>
    <thead>
    <tr><td colspan="<%=colspan%>"><h2>TutorInnen</h2></td></tr>
    <%= render :partial => "person_table_head" %>
    </thead>
    <tbody>
    <%= render :partial => "person", :collection => @contestant.people.tutors %>
    </tbody>
  <% end %>

  <% unless @contestant.people.pupils.empty? -%>
    <thead>
    <tr><td colspan="<%=colspan%>"><h2>SchülerInnen</h2></td></tr>
    <%= render :partial => "person_table_head" %>
    </thead>
    <tbody>
    <%= render :partial => "person", :collection => @contestant.people.pupils %>
    </tbody>
  <% end %>
  </table>
<% end %>
