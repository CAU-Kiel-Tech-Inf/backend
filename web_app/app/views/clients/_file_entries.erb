<thead>
  <tr>
    <th style="width: 32px;">&nbsp;</th>
    <th><%= t("views.filename") %></th>
    <th><%= t("views.size") %></th>
  </tr>
</thead>
<% if @parent %>
  <%  parent = @parent.clone; parent.file_name = '..'; parent.id = @parent.parent.try(:id); parent.readonly! %>
  <%= render :partial => "file_entry", :locals => { :file_entry => parent, :client => @client } %>
<% end %>
<%= render :partial => "file_entry", :collection => @entries, :locals => { :client => @client } %>
