<div id="actions">
  <% link_to new_contestant_client_url(@contestant) do %>
    <%= image_tag('actions/add.png') %>Computerspieler hochladen
  <% end %>
</div>

<h1><%= link_to @contestant.name, @contestant %> / Computerspieler</h1>

<% tabnav :contestant do %>
  <table style="width: 100%; border-spacing: 0;">
    <tr style="text-align: left; font-size: 11px;">
      <th colspan="2">&nbsp;</th>
      <th>Dateiname</th>
      <th>Hauptdatei</th>
      <th>Informationen</th>
    </tr>
    <%= render :partial => "client", :collection => @contestant.clients %>
  </table>

  <% unless @contestant.current_client %>
    <p>
      Es ist noch kein Computerspieler ausgew√§hlt worden.
    </p>
  <% end %>
<% end %>