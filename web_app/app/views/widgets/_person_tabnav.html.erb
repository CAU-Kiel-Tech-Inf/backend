<%
render_tabnav :person, :html => { :class => "tabs_tabnav" } do
  
  add_tab do |t|
    t.named t("titles.edit")
    if @contestant.nil?
      t.links_to edit_contest_person_url(@contest, @person)
    else
      t.links_to edit_contest_contestant_person_url(@contest, @contestant, @person)
    end
  end

  add_tab do |t|
    t.named "Benachrichtigungen"
    if @contestant.nil?
      t.links_to edit_contest_person_email_event_url(@contest, @person)
    else
      t.links_to edit_contest_contestant_person_email_event_url(@contest, @contestant, @person)
    end
  end

end
%>
