<% render_tabnav :tickets, :html => {:class => "tabs_tabnav" } do
  add_tab do |t|
    t.named "Ticket-Übersicht"
    t.links_to tickets_url()
    t.highlights_on :controller => "tickets", :action => "index"
  end

  if @ticket and @ticket.id
    add_tab do |t| 
      t.named "Ticket ansehen"
      t.links_to ticket_url(:id => @ticket.id)
      t.highlights_on :controller => "tickets", :action => "show"
    end

    add_tab do |t|
      t.named "Anhänge"
      t.links_to attachments_ticket_url(:id => @ticket.id)
      t.highlights_on :controller => "tickets", :action => "attachments"
    end
  end
end
%>
