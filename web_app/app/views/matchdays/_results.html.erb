<div style="float: right;">
  <% if @matchday.running? %>
    Der Spieltag wird momentan durchgef√ºhrt!
  <% else %>
    <% if @matchday.played? %>
      <%= button_to "Spieltag wiederholen", play_contest_matchday_url(@contest, @matchday), :method => "post" %>
    <% else %>
      <%= button_to "Spieltag spielen", play_contest_matchday_url(@contest, @matchday), :method => "post" %>
    <% end %>
  <% end %>
</div>

<h2><%= @matchday.position %>. Spieltag, <%= l(@matchday.when, :format => :long) %></h2>

<table style="width: 100%;">
  <tr style="display: none;">
    <th>Spieler 1</th>
    <th>&nbsp;</th>
    <th>Spieler 2</th>
    <th>&nbsp;</th>
    <th>Ergebnis</th>
  </tr>
  <% @matchday.matches.each do |match| %>
    <tr>
      <td style="text-align: right;"><%= match.slots[0].name || "Freispiel" %></td>
      <td style="text-align: center; font-weight: bold;">vs</td>
      <td><%= match.slots[1].name || "Freispiel" %></td>
      <td><%= match.rounds.count %> Runde(n)</td>
      <td><%= match.result || "Kein Ergebnis" %></td>
      <td><%= link_to "Details", contest_matchday_match_url(@contest, @matchday, match) %></td>
    </tr>
  <% end %>
</table>

<p>
  <% if @matchday.played? %>
    Durchgespielt am: <%= l(@matchday.played_at, :format => :long) %><br/>
  <% end %>
  Aktualisiert am: <%= l(@matchday.updated_at, :format => :long) %>
</p>