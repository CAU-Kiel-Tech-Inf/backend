<% form_tag login_url do %>
  <% fields_for :user do |f| %>
    <%= f.label :email, "E-Mail Addresse" %>
    <%= f.text_field :email %>
    <%= f.label :password, "Passwort" %>
    <%= f.password_field :password %>
  <% end %>
  <%= submit_tag "login" %>
<% end %>

