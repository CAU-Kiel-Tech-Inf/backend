<%= stylesheet_link_tag "season_contests" %>

<h1>
  <%= Season.human_name %>: <%= @season.name %> /
  <%= Contest.human_name :count => 2 %>
</h1>

<% tabnav :season do %>
  <% @season.phases.each do |p| %>
    <div class="season_phase <%= cycle "even", "odd" %>">
      <h2>Phase: <%= p.name %></h2>
      <table class="data-table">
        <colgroup>
          <col width="90%">
          <col width="10%">
        </colgroup>
        <thead>
          <th>Name</th>
          <th>Aktionen</th>
        </thead>
        <tbody>
          <% for contest in p.contests %>
           <tr>
             <td><%= contest.name %></td>
             <td><%= link_to image_tag("actions/show.png"), contest %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
