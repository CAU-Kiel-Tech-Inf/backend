<h1>
  <%= link_to @contest.name, contest_contestants_url %> /
  <%= @contestant.name %>
</h1>

<% tabnav :contestant do %>
  <table class="data-table">
    <colgroup>
    <colgroup span="2"/>
    <colgroup width="15%"/>
    <thead>
      <tr>
        <th>Wann</th>
        <th>Spieler 1</th>
        <th>Spieler 2</th>
        <th style="text-align: center;">Ergebnis</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "matchdays/match", :collection => @contestant.matches, :locals => { :date => true } %>
    </tbody>
  </table>
<% end %>