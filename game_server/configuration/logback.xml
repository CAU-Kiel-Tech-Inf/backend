<?xml version="1.0" encoding="UTF-8"?>

<!-- This config is used when game_server/configuration is added to the classpath -->
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>

    <!-- set loggers in which you are interested in to a lower level here -->
	<logger name="sc.plugin2017.gui.renderer" level="DEBUG" />
	<logger name="sc.plugin2017.Game" level="DEBUG" />

	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
	
</configuration>
