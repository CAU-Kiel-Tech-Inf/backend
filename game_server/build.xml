<project name="GameServer" basedir="." default="main">

	<property name="src.dir" value="src" />
	<property name="test.dir" value="test" />

	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/bin" />
	<property name="jar.dir" value="${build.dir}/jar" />

	<property name="main-class" value="sc.server.Application" />

	<property name="lib.dir" value="lib" />
	<property name="plugin.dir" value="${jar.dir}/plugins" />

	<path id="classpath.base">
		<fileset dir="${lib.dir}" includes="**/*.jar" />
	</path>

	<path id="classpath.test">
		<pathelement location="${lib.dir}/junit.jar" />
		<pathelement location="${src.dir}" />
		<pathelement location="${test.dir}" />
		<path refid="classpath.base" />
	</path>

	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="configure.eclipse" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter" />
		<echo message="Configuring compiler for Eclipse..." />
	</target>

	<target name="dependencies">
		<ant dir="./../game_plugin_interface" inheritAll="false" />
		<ant dir="./../game_plugins/hase_und_igel" inheritAll="false" />
		<copy todir="${lib.dir}" file="./../game_plugin_interface/build/jar/GamePluginInterface.jar" />
	</target>

	<target name="compile" depends="dependencies">
		<mkdir dir="${classes.dir}" />
		<antcall target="configure.eclipse" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath.base" debug="true" />
	</target>

	<target name="compile-test" depends="dependencies">
		<mkdir dir="${classes.dir}" />
		<antcall target="configure.eclipse" />
		<javac srcdir="${test.dir}" destdir="${classes.dir}">
			<classpath refid="classpath.test" />
		</javac>
	</target>

	<target name="plugins">
		<mkdir dir="${jar.dir}" />
		<copydir dest="${jar.dir}" src="${lib.dir}" />
		<mkdir dir="${plugin.dir}" />
		<copy todir="${plugin.dir}" file="./../game_plugins/hase_und_igel/build/jar/HaseUndIgel.jar" />
	</target>

	<target name="jar" depends="compile, plugins">
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
				<attribute name="Class-Path" value="GamePluginInterface.jar testng-5.9-jdk15.jar
					logback-access-0.9.15.jar logback-classic-0.9.15.jar logback-core-0.9.15.jar
					slf4j-api-1.5.6.jar" />
			</manifest>
		</jar>
	</target>

	<target name="debug" depends="jar">
		<java jar="${jar.dir}/${ant.project.name}.jar" dir="${jar.dir}" fork="yes">
			<sysproperty key="DEBUG" value="true" />
			<jvmarg value="-Xdebug" />
			<jvmarg value="-Xnoagent" />
			<jvmarg value="-Djava.compiler=NONE" />
			<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000" />
		</java>
	</target>

	<target name="run" depends="jar">
		<java jar="${jar.dir}/${ant.project.name}.jar" dir="${jar.dir}" fork="true">
			<jvmarg value="-Xnoagent" />
			<jvmarg value="-Djava.compiler=NONE" />
		</java>
	</target>

	<target name="junit" depends="compile-test">
		<junit printsummary="yes">
			<formatter extension="log" type="plain" usefile="true" />
			<classpath>
				<path refid="classpath.base" />
				<path refid="classpath.test" />
			</classpath>

			<batchtest fork="yes">
				<fileset dir="${test.dir}" includes="**/*Test.java" />
			</batchtest>
		</junit>

		<echo message="All tests in '${test.dir}' have been executed!" />
	</target>

	<target name="clean-build" depends="clean,jar" />

	<target name="main" depends="run" />
</project>
